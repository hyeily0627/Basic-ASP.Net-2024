@model MyPortfolio.Models.TempProject // Project 사용하면 안됨!!

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <textarea asp-for="ProjectName" class="form-control"></textarea>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="FilePath" />

                <label asp-for="ProjectImage" class="control-label"></label>
                <span class="text-secondary">업로드 파일 : @Model.FilePath</span>
                <input asp-for="ProjectImage" type="file" class="form-control" accept=".jpg, .png, .jpeg" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        var simplemde = new SimpleMDE({ element: document.getElementById("ProjectName") });
        var simplemde2 = new SimpleMDE({ element: document.getElementById("Description") });
    </script>
}
